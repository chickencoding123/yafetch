{
  "ignorePatterns": ["*.d.ts", "dist"],
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "no-redeclare": "off",
    "@typescript-eslint/no-explicit-any": "off",
    "space-before-function-paren": "off"
  }
}