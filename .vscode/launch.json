  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Core Tests",
      "request": "launch",
      "runtimeArgs": [
        "test",
        "--testMatch packages/core/**/*.ts"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "autoAttachChildProcesses": true,
    },
    {
      "name": "Debug Plugin-Retry Tests",
      "request": "launch",
      "runtimeArgs": [
        "test",
        "--testMatch packages/plugin-retry/**/*.ts"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node",
      "autoAttachChildProcesses": true,
    }
  ]
}